# ===========================================
# BANGLADESH ROBOTICS MARKETPLACE - ENV CONFIG
# ===========================================
# IMPORTANT: Copy this file to .env and fill in actual values
# NEVER commit .env to Git - add it to .gitignore
# ===========================================

# Server Configuration
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:3000

# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=robotics_marketplace
DB_USER=postgres
DB_PASSWORD=your_secure_password_here

# JWT Configuration
# Generate a secure random string (min 32 chars):
# node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_super_secret_jwt_key_here_min_32_chars_replace_this
JWT_EXPIRE=7d

# Cloudinary Configuration (for image uploads)
# Get from: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Email Configuration (NodeMailer with Gmail)
# For Gmail: Enable "Less secure app access" or use App Password
# Get App Password: https://myaccount.google.com/apppasswords
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=test@roboticsbd.com
EMAIL_PASSWORD=test_password_disabled_for_testing
EMAIL_FROM="Bangladesh Robotics Marketplace <noreply@roboticsbd.com>"

# Platform Configuration
PLATFORM_NAME="Bangladesh Robotics Marketplace"
PLATFORM_COMMISSION_RATE=0.05
SUPPORT_EMAIL=support@roboticsbd.com

# Payment Configuration (for future bKash/Nagad integration)
BKASH_APP_KEY=your_bkash_app_key
BKASH_APP_SECRET=your_bkash_app_secret
BKASH_USERNAME=your_bkash_username
BKASH_PASSWORD=your_bkash_password
BKASH_BASE_URL=https://tokenized.sandbox.bka.sh/v1.2.0-beta

NAGAD_MERCHANT_ID=your_nagad_merchant_id
NAGAD_MERCHANT_NUMBER=your_nagad_merchant_number
NAGAD_PUBLIC_KEY=your_nagad_public_key
NAGAD_PRIVATE_KEY=your_nagad_private_key
NAGAD_BASE_URL=http://sandbox.mynagad.com:10080/remote-payment-gateway-1.0/api/dfs

# Google Maps API (for location selection)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Reward System Configuration (points per action)
POINTS_PER_100_TAKA=10
POINTS_COMPETITION_CREATED=100
POINTS_FIVE_STAR_REVIEW=20
POINTS_FAST_SHIPPING=5

# Reward Tier Thresholds
TIER_BRONZE_MIN=0
TIER_SILVER_MIN=500
TIER_GOLD_MIN=1500
TIER_PLATINUM_MIN=5000

# Commission Rates by Tier
COMMISSION_BRONZE=0.05
COMMISSION_SILVER=0.03
COMMISSION_GOLD=0.02
COMMISSION_PLATINUM=0.01

# Shipping Configuration
SHIPPING_DHAKA=60
SHIPPING_OUTSIDE_DHAKA=80
FREE_SHIPPING_THRESHOLD=1000

# Session Configuration
SESSION_SECRET=your_session_secret_here_min_32_chars
SESSION_MAX_AGE=86400000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Limits (in bytes)
MAX_FILE_SIZE=5242880
MAX_IMAGE_SIZE=2097152

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# ===========================================
# DEVELOPMENT ONLY - Remove in production
# ===========================================
DEBUG=true
ENABLE_QUERY_LOGGING=true

# ===========================================
# INSTRUCTIONS FOR PRODUCTION DEPLOYMENT
# ===========================================
# 1. Change NODE_ENV to "production"
# 2. Use strong, unique passwords for all credentials
# 3. Generate secure JWT_SECRET using:
#    node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
# 4. Set up proper HTTPS/SSL certificates
# 5. Use production database with proper backups
# 6. Configure production Cloudinary account
# 7. Use production email SMTP (not Gmail for high volume)
# 8. Set up real payment gateway credentials
# 9. Disable DEBUG and ENABLE_QUERY_LOGGING
# 10. Configure proper rate limiting for production traffic
# 11. Set up log rotation and monitoring
# 12. Use environment-specific FRONTEND_URL
# 13. Enable database connection pooling
# 14. Configure proper CORS origins
# 15. Set up CDN for static assets
# ===========================================

# ===========================================
# SECURITY CHECKLIST
# ===========================================
# [ ] .env file is in .gitignore
# [ ] JWT_SECRET is at least 32 characters
# [ ] Database password is strong and unique
# [ ] Email credentials use App Password (not main password)
# [ ] Cloudinary credentials are secure
# [ ] Payment gateway credentials are from production (not sandbox)
# [ ] CORS is configured to allow only trusted domains
# [ ] Rate limiting is enabled and configured
# [ ] File upload limits are appropriate
# [ ] Session secret is strong and unique
# [ ] All API keys are kept confidential
# ===========================================
